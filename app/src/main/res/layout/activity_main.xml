<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#F5F5F5">

    <!-- Button for Volunteers -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_volunteer_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=" I'm here to help! Click to continue."
        android:contentDescription="Button for volunteers to log in and help others"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_request_help"
        app:layout_constraintHeight_percent="0.33"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:backgroundTint="#FF7043"
        android:background="@drawable/button_with_border" />

    <!-- Button for Blind People -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request_help"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Help me find a helper!"
        android:contentDescription="Button for you to get help!"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_volunteer_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.67"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:backgroundTint="#00796B"
        android:background="@drawable/button_with_border" />
</androidx.constraintlayout.widget.ConstraintLayout>
